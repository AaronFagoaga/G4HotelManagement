@model G4_HotelManagerDEMO.Models.HotelModel

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Desea eliminar la información de este hotel?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelName)
        </dd>
        <dt class="col-sm-2">Información:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelInfo)
        </dd>
        <dt class="col-sm-2">Teléfono:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelPhone)
        </dd>
        <dt class="col-sm-2">Correo electrónico:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelEmail)
        </dd>
        <dt class="col-sm-2">Dirección:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelAddress)
        </dd>
        <dt class="col-sm-2">Categoria:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hotelCategory)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="IdHotel" type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </form>
</div>

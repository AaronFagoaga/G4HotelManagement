@model IEnumerable<G4_HotelManagerDEMO.Models.EmployeeModel>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Lista de empleados</h1>

<div class="container">
	<div class="row">
		<div class="col-md-12">

			<div class="mb-3 mb-3">
				<a asp-action="Create" asp-controller="Employee" class="btn btn-success">
					Agregar Empleado
				</a>
			</div>

			<table class="table table-bordered table-striped table-responsive" id="employeesTable">
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Apellido</th>
						<th>Edad</th>
						<th>Trabajo</th>
						<th>Email</th>
						<th>Número telefonico</th>
						<th>ACCIONES</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@Html.DisplayFor(modelItem => item.emploName)</td>
							<td>@Html.DisplayFor(modelItem => item.emploLastName)</td>
							<td>@Html.DisplayFor(modelItem => item.emploAge)</td>
							<td>@Html.DisplayFor(modelItem => item.emploJob)</td>
							<td>@Html.DisplayFor(modelItem => item.emploEmail)</td>
							<td>@Html.DisplayFor(modelItem => item.emploPhone)</td>
							<td class="text-center">
								<div class="w-75 btn-group" role="group">
									<a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.IdEmployee"><i class="fa-solid fa-pen-to-square"></i></a>
									<a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.IdEmployee"><i class="fa-solid fa-trash"></i></a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$("#employeesTable").DataTable({
				dom: 'Bfrtip',
				buttons: [
					{
						extend: 'csv',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'pdf',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					},
					{
						extend: 'excel',
						exportOptions: {
							columns: ':not(:last-child)'
						}
					}
				],
				columnDefs: [
					{
						targets: 6,
						orderable: false,
						searchable: false
					}
				],
				language: {
					url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
				}
			});
		});
	</script>

	@if (TempData["editEmployee"] != null)
	{
		<script>
			Toastify({
				text: "¡Cliente editado!",
				duration: 3000,
				newWindow: true,
				gravity: "top",
				position: "right",
				stopOnFocus: true,
				style: {
					background: "linear-gradient(to right, #00b09b, #96c93d)",
				},
			}).showToast();
		</script>
	}

	@if (TempData["deleteEmployee"] != null)
	{
		<script>
			Toastify({
				text: "Se eliminó el Cliente...",
				duration: 3000,
				newWindow: true,
				gravity: "top",
				position: "right",
				stopOnFocus: true,
				style: {
					background: "linear-gradient(to right, #00b09b, #96c93d)",
				},
			}).showToast();
		</script>
	}
}
